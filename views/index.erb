<!DOCTYPE html>
<html>
	<head>
		<title>KitchHike Invitation</title>
		<% if(@mobile) %>
		  <link href='css/mobile.css' rel='stylesheet' type='text/css'>
		<% else %>
		  <link href='css/main.css' rel='stylesheet' type='text/css'>
		<% end %>
		<link href='http://fonts.googleapis.com/css?family=Asap' rel='stylesheet' type='text/css'>
		<link rel="stylesheet" href="css/jquery.maximage.css?v=1.2" type="text/css" media="screen" charset="utf-8" />
		<script src='http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js'></script>
		<script src="js/jquery.maximage.js" type="text/javascript" charset="utf-8"></script>
		<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
		<script type="text/javascript">
		  (function() {
		    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
		    po.src = 'https://apis.google.com/js/plusone.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
		  })();
		</script>
		<meta name="description" content="KitchHike Find the world kitchen" />
		<meta name="keyword" content="Kitchhike,SNS,social,world,kitchen" />
		<meta property="og:title" content="KitchHike" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="http://kitchhike.com"/>
		<meta property="og:image" content="http://kitchhike.com/images/logo.jpg"/>
		<meta property="og:site_name" content="KitchHike"/>
		<meta property="og:description" content="Find the world kitchen!"/>
		<meta property="fb:admins" content="100002166934717,100002166934717" />
		<meta property="fb:app_id" content="411048552262525">  
		<% if(@mobile) %>
		  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
		<% end %>
	</head>
	<body>
<div id="fb-root"></div>
    <div id="container" align="center">
   	<div id="contents-wrapper1">
   	<div id="contents-wrapper2">
      <div id="contents" class="text-center">
        <img src="images/main_image.png" />
        <div id="contents-text" class="text-center">
          <%=@message%>
        </div>
        <% if (@form) %>
        <div id="form">
          <form action="/" method="post" name="invitation">
            <input type="text" name="email" size="20" placeholder="e-mail@address.com" />
            <input type="button" value="GO" class="btn btn-success btn-original" onclick="document.invitation.submit()"/>
          </form>
        </div>
        <% end %>
        <div id="social-btn-area">
	        <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://kitchhike.com" data-text="KitchHike, Find the world kitchen!">Tweet</a>
			<div class="g-plusone" data-size="medium"></div>
			<iframe src="//www.facebook.com/plugins/like.php?locale=en_US&href=http%3A%2F%2Fkitchhike.com&amp;send=false&amp;layout=standard&amp;width=450&amp;show_faces=true&amp;font=arial&amp;colorscheme=light&amp;action=like&amp;height=80" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:270px; height:63px;" allowTransparency="true"></iframe>
        </div>
      </div>
   	</div>
   	</div>
    </div>
	<% if(!@mobile) %>
		<div id="maximage">
			<img src="/images/background.jpg" alt="" width="1400" height="1050" />
		</div>
		<script type="text/javascript" charset="utf-8">
			$(function(){
				$('#maximage').maximage({
					cycleOptions: {
						fx: 'fade',
						speed: 1000,
						timeout: 0,
						prev: '#arrow_left',
						next: '#arrow_right',
						pause: 1,
						after: function(last,current){
						}
					}
				});
			});
		</script>
	<% end %>
  </body>
</html>

